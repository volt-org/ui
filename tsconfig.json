{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
//    "paths": {
//      "*": ["node_modules/*"]
//    }
  },
  "include": [
    "src/**/*",
    "libs/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ]
}
